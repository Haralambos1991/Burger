<div class="container" id="header">
    <section class="hero is-danger">
        <div class="hero-body">
            <div class="container is-text-centered">
                <h1 class="title is-1">
                    <!-- <img src="assets/img/burger.gif" alt="" class="card-img-top"> -->
                    DEVOUR-A-BURGER
                </h1>
                <h2 class="subtitle">
                    Burger Menu
                </h2>
            </div>
        </div>
    </section>
</div>

<div class="container main-content">
    <div class="row test">

        <div class="col-md-6 left-col">
            <h2>Devour a Burger</h2>
            <ul>
                {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
            </ul>
        </div>

        <div class=" col-md-6">

            <h2>Devoured Burgers</h2>
            <ul>
                <li>
                    1. Hamburger
                </li>
                <br>
                <li>
                    2. Cheeseburger
                </li>
                <br>
                <li>
                    3. Fish Burger
                </li>
                <br>
                <li>
                    4. Slag Burger
                </li>
                <br>
                <li>
                    5. Chilly Burger
                </li>
                <br>
                <li>
                    6. Rice Burger
                </li>
                <br>
                <li>
                    7. Salmon Burger
                </li>
                <br>
            </ul>

        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-mb-12">
            <form class="create-form">
                <div class="field"></div>
                <label class="label" for="burger title">Burger Name</label>
                <input type="class" id="burger" name="name">
                <button class="button is danger" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>